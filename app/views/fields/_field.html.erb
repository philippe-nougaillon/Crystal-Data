<tr>
    <td><%= field.name %></td>
    <td><%= field.datatype %></td>
    <td><%= field.items %></td>
    <td><% if field.filtre %>
	    	<i class="glyphicon glyphicon-zoom-in"></i>
    	<% end %>
    </td>
    <td><% if field.sum %>
	    	<i class="glyphicon glyphicon-plus"></i>
    	<% end %>
    </td>
    <td><%= link_to 'Modifier', edit_field_path(field), class: 'btn btn-info btn-xs' %>
    	<%= link_to '[X]', field, method: :delete, data: { confirm: 'Vraiement ?' }, class: 'btn btn-danger btn-xs' %>
    </td>
</tr>
