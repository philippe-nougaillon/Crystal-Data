<p id="notice"><%= notice %></p>

<h2>
  <i class="glyphicon glyphicon-time"></i> 
  Historique des modification de '<%= @table.name.humanize %>'<%= ", ligne #{@record_index}" if @record_index %>
</h2>

<table class="table table-striped table-hover table-bordered table-responsive">
  <thead>
    <tr>
      <th>Le</th>
      <th>Utilisateur</th>
      <th>Colonne</th>
      <th>Modification</th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td><%= l(log.created_at) %></td>
        <td><%= log.user.name %></td>
        <td><%= log.field.name %></td>
        <td><%= log.message %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= pluralize(@logs.count, "modification") %> dans l'historique

<br>

