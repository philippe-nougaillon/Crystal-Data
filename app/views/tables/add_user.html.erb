<%= form_for :user, url: '/add_user_do' do %>

  <%= hidden_field_tag :id, params[:id] %>

  <div class="field form-group">
  		<div class="col-sm-4">
		    Entrez son adresse mail
		    <%= text_field_tag :email, nil, class:'form-control'  %>
		</div>
  </div>
  <br>

  <%= submit_tag "Partager", class: 'btn btn-success' %>

<% end %>