<h3>Tables</h3>

<% if @tables.any? %>
  <table class="table table-condensed">
    	<% @tables.each do |table| %>
      	<tr>
      		<td>
            <b><%= link_to table.name.humanize, table, class:'btn btn-lg btn-block btn-default' %></b>
          </td>
          <td>
            <%= link_to fill_url(table.id), class:'btn btn-lg btn-success center-block' do %>
                <i class="glyphicon glyphicon-plus"></i> 
            <% end %>
          </td>
		    </tr>
  	  <% end %>
  </table>
<% end %>
