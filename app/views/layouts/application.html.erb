<!DOCTYPE html>
<html>
<head>
  <title>crystalData</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="main-container" class="container">
		<div class="row">
			<ul class="nav nav-pills" role="tablist">
				<% if @current_user %>
					<li class=<%= (controller_name == 'tables' && !params[:id]) ? 'active' : '' %>>
						<%= link_to tables_path do %><i class="glyphicon glyphicon-th-list"></i> Tables<% end %>
					</li>
					<% @current_user.tables.each do |table| %>
						<li class=<%= (controller_name == 'tables' && params[:id]== table.id.to_s) ? 'active' : '' %>>
							<%= link_to table.name.humanize, table %>
						</li>
					<% end %>
					<li>
					    <li class="dropdown">
				            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
				               <%= @current_user.name %><b class="caret"></b>
				            </a>
				            <ul class="dropdown-menu">
				              <li><%= link_to "Profil", @current_user %></li>
				              <li><%= link_to "Préférences", '#' %></li>
				              <li class="divider"></li>
				              <li>
				                <%= link_to "Se déconnecter", '/logout' %>
				              </li>
				            </ul>
				          </li>
					</li>
				<% else %>
					<li>
					    <li class="dropdown">
				            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
				               Connexion<b class="caret"></b>
				            </a>
				            <ul class="dropdown-menu">
				              <li><%= link_to "Se connecter", '/login' %></li>
				              <li class="divider"></li>
				              <li><%= link_to "A propos", '/about' %></li>
				              <li class="divider"></li>
				              <li><%= link_to "Créez votre compte", signup_path %></li>
				            </ul>
				          </li>
					</li>
				<% end %>
			</ul>
			<% if notice || alert %>
			    <div class="alert <%= notice ? "alert-info" : "" %><%= alert ? "alert-danger" : "" %> alert-dismissible" role="alert">
			        <button type="button" class="close" data-dismiss="alert">
			            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
			        <div >
			            <% if notice %>
			                <%= notice %>
			            <% elsif alert %>
			                <%= alert %>
			            <% end %>
			        </div>
			    </div>
			<% end %>
			<%= yield %>
		</div>
	</div>
</body>
</html>
