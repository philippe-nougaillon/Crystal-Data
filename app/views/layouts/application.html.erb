<!DOCTYPE html>
<html>
<head>
  <title>CrystalData</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="main-container" class="container">
		<div class="row">
			<ul class="nav nav-pills" role="tablist">
				<% if current_user %>
					<li class=<%= (controller_name == 'tables' && !params[:id]) ? 'active' : '' %>>
						<%= link_to "Tables", tables_path %>
					</li>
					<% @current_user.tables.each do |table| %>
						<li class=<%= (controller_name == 'tables' && params[:id]== table.id.to_s) ? 'active' : '' %>>
							<%= link_to table.name, table %>
						</li>
					<% end %>
					<li><%= link_to current_user.name %></li>
					<li><%= link_to "[X]", '/logout' %></li>
				<% end %>
			</ul>
			<% if notice || alert %>
			    <div class="alert <%= notice ? "alert-info" : "" %><%= alert ? "alert-danger" : "" %> alert-dismissible" role="alert">
			        <button type="button" class="close" data-dismiss="alert">
			            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
			        <div >
			            <% if notice %>
			                <%= notice %>
			            <% elsif alert %>
			                <%= alert %>
			            <% end %>
			        </div>
			    </div>
			<% end %>
			<%= yield %>
		</div>
	</div>
</body>
</html>
