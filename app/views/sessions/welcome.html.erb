  <div class="modal-dialog modal-lg" >
    <div class="modal-content">
        <img src="" id="imagepreview-lg" >
    </div>
  </div>
</div>
<div class="modal fade" id="imagemodal-sm" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-sm" >
    <div class="modal-content">
        <img src="" id="imagepreview-sm" >
    </div>
  </div>
</div>
